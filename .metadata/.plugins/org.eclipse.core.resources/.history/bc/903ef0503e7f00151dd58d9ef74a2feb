package com.mathewberry.companies.plugin.hooks;

import com.mathewberry.companies.CompaniesCore;

public class VaultHandler {
	
	private Economy economy = null;
	
	public VaultHandler()
	{
		setupEconomy();
	}
	
	private boolean setupEconomy()
	{
		RegisteredServiceProvider<Economy> economyProvider = CompaniesCore.getInstance().getServer().getServicesManager().getRegistration(Econmy.class);
		if(econmyProvider != null) {
			this.economy = ((Economy)economyProvider.getProvider());
		}
		retur this.economy != null;
	}
}
