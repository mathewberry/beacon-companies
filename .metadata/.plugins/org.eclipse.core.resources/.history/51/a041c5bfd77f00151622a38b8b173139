package com.mathewberry.companies.persistant.data;

import javax.persistence.Entity;
import javax.persistence.Id;
import javax.persistence.Table;

import org.bukkit.entity.Player;

import com.avaje.ebean.validation.NotNull;

@Entity
@Table(name="mc_companies")
public class Companies 
{
	@Id
	private int id;
	@NotNull 
	private String company_name;
	@NotNull
	private String company_creator_uuid;
	@NotNull
	private float company_blanace;
	@NotNull
	private String company_created;
	
	public static Companies companyFromPlayer(Player player) 
	{
		Companies company = new Companies();
		company.setPlayerName(player.getUniqueId().toString());
		return company;
	}
}
