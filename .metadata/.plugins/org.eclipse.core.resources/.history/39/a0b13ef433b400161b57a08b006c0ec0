package com.mathewberry.companies.helpers;

import org.bukkit.Bukkit;
import org.bukkit.command.CommandSender;
import org.bukkit.entity.Player;

public class CommandHelper {

	/**
	 * Get the players UUID
	 * @param sender
	 * @return
	 */
	public static String getPlayerUUID(CommandSender sender)
	{
		Player player = (Player) sender;
		return player.getUniqueId().toString();
	}

	/**
	 * Get the players name
	 * @param uuid
	 * @return
	 */
	public static String getPlayerName(String uuid)
	{
		System.out.println(uuid);
		System.out.println(Bukkit.getPlayer(uuid).getName());
		return Bukkit.getPlayer(uuid).getName();
	}
	
	/**
	 * Turn an array into a string by imploding the items based
	 * the glue provided.
	 * @param items
	 * @param glue
	 * @return
	 */
	public static String implode(String[] items, String glue)
	{
		StringBuilder sb = new StringBuilder();
		
		for(int i = 0; i < items.length; i++) {
			sb.append(items[i]);
			
			if(i != items.length - 1) {
				sb.append(glue);
			}
		}
		
		return sb.toString();
	}
}
